{
  "name": "attendance-system",
  "productName": "Attendance System",
  "version": "1.0.0",
  "description": "Face Recognition Based Attendance Management System",
  "author": "Soochak Bharat",
  "private": true,
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "server": "node server.js",
    "start": "node server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --win --x64",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.soochakbharat.attendance",
    "productName": "Attendance System",
    "copyright": "Copyright Â© 2026 Soochak Bharat",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "server.js",
      "emailService.js",
      "preload.js",
      "visitor_management.db",
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/nodemailer/**/*",
      "node_modules/xlsx/**/*"
    ],
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "server.js",
      "emailService.js",
      "preload.js",
      "visitor_management.db",
      "electron.cjs",
      "node_modules/**/*",
      "public/models/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "visitor_management.db",
        "to": "visitor_management.db"
      },
      {
        "from": "public/models",
        "to": "models"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}_Portable_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Attendance System",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "license": "LICENSE.txt"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Office"
    }
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@types/leaflet": "^1.9.21",
    "better-sqlite3": "^12.5.0",
    "body-parser": "^2.2.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "face-api.js": "^0.22.2",
    "fs-extra": "^11.3.3",
    "html2canvas": "^1.4.1",
    "leaflet": "^1.9.4",
    "lottie-react": "^2.4.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^7.11.0",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/html2canvas": "^1.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "28.2.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^8.0.1"
  }
}
